<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 Name="Neos Account Downloader"
             x:Class="AccountDownloader.App"
             xmlns:conv="using:AccountDownloader.Converters">
    <Application.RequestedThemeVariant>Dark</Application.RequestedThemeVariant>
    <Application.Styles>
        <FluentTheme />
	      <StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml"/>
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Simple.xaml"/>
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
    </Application.Styles>
	<Application.Resources>
		<SolidColorBrush x:Key="SystemControlBackgroundAltHighBrush" Color="#2C2C2C"/>
    <conv:ZeroConverter x:Key="ZeroConverter" />
	</Application.Resources>
</Application>
